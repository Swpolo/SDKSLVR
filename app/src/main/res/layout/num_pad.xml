<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:onClick="solve"
        android:text="Solve"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/b_9"
        app:layout_constraintTop_toBottomOf="@+id/b_7" />

    <Button
        android:id="@+id/b_0"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:onClick="keyboard"
        android:text="0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/button"
        app:layout_constraintRight_toRightOf="@+id/b_9"
        app:layout_constraintTop_toBottomOf="@+id/b_9" />

    <Button
        android:id="@+id/b_1"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="keyboard"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_2"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="keyboard"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@+id/b_1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_3"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="keyboard"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/b_2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_4"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="keyboard"
        android:text="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_1" />

    <Button
        android:id="@+id/b_5"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="keyboard"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@+id/b_4"
        app:layout_constraintTop_toBottomOf="@+id/b_2" />

    <Button
        android:id="@+id/b_6"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="keyboard"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@+id/b_5"
        app:layout_constraintTop_toBottomOf="@+id/b_3" />

    <Button
        android:id="@+id/b_7"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="keyboard"
        android:text="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_4" />

    <Button
        android:id="@+id/b_8"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="keyboard"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@+id/b_7"
        app:layout_constraintTop_toBottomOf="@+id/b_5" />

    <Button
        android:id="@+id/b_9"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="keyboard"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@+id/b_8"
        app:layout_constraintTop_toBottomOf="@+id/b_6" />
</android.support.constraint.ConstraintLayout>